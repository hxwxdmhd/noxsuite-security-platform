      "dependencies": [1, 2, 3, 4, 5, 6, 7],
      "pass_threshold": 90,
      "tests": [
        {
          "id": "release-1",
          "name": "Version Management",
          "weight": 30,
          "description": "Check version management consistency"
        },
        {
          "id": "release-2",
          "name": "Deployment Readiness",
          "weight": 40,
