{
  "gates": [
    {
      "id": 1,
      "name": "Foundation",
      "description": "Project foundation and structure",
      "pass_threshold": 70,
      "tests": [
        {
          "id": "foundation-1",
          "name": "Project Structure",
          "weight": 20,
          "description": "Verify that the project has the correct directory structure"
        },
        {
          "id": "foundation-2",
          "name": "Core System Files",
          "weight": 25,
          "description": "Check that essential system files are present"
        },
        {
          "id": "foundation-3",
          "name": "Configuration Files",
          "weight": 15,
          "description": "Validate that configuration files are properly defined"
        },
        {
          "id": "foundation-4",
          "name": "Docker Infrastructure",
          "weight": 20,
          "description": "Check Docker configuration and container setup"
        },
        {
          "id": "foundation-5",
          "name": "Documentation",
          "weight": 20,
          "description": "Verify that basic documentation is present"
        }
      ]
    },
    {
      "id": 2,
      "name": "Security",
      "description": "Security implementation and testing",
      "dependencies": [1],
      "pass_threshold": 80,
      "tests": [
        {
          "id": "security-1",
          "name": "Authentication",
          "weight": 30,
          "description": "Test authentication mechanisms"
        },
        {
          "id": "security-2",
          "name": "Authorization",
          "weight": 25,
          "description": "Test authorization and access control"
        },
        {
          "id": "security-3",
          "name": "Data Encryption",
          "weight": 25,
          "description": "Validate data encryption at rest and in transit"
        },
        {
          "id": "security-4",
          "name": "Security Headers",
          "weight": 20,
          "description": "Check for appropriate security headers"
        }
      ]
    },
    {
      "id": 3,
      "name": "Performance",
      "description": "System performance and optimization",
      "dependencies": [1, 2],
      "pass_threshold": 75,
      "tests": [
        {
          "id": "performance-1",
          "name": "Response Time",
          "weight": 30,
          "description": "Measure API endpoint response times"
        },
        {
          "id": "performance-2",
          "name": "Throughput",
          "weight": 25,
          "description": "Test system throughput under load"
        },
        {
          "id": "performance-3",
          "name": "Resource Usage",
          "weight": 25,
          "description": "Monitor CPU, memory, and disk usage"
        },
        {
          "id": "performance-4",
          "name": "Scalability",
          "weight": 20,
          "description": "Test system behavior with increasing load"
        }
