        {
          "id": "docs-2",
          "name": "Developer Documentation",
          "weight": 35,
          "description": "Validate developer documentation quality"
        },
        {
          "id": "docs-3",
          "name": "Architecture Documentation",
          "weight": 30,
          "description": "Verify architecture documentation clarity"
        }
      ]
    },
    {
      "id": 8,
      "name": "Release Readiness",
