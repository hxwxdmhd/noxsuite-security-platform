        {
          "id": "ui-2",
          "name": "Accessibility",
          "weight": 35,
          "description": "Check accessibility compliance"
        },
        {
          "id": "ui-3",
          "name": "User Experience",
          "weight": 30,
          "description": "Validate consistent user experience"
