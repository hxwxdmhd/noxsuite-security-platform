        {
          "id": "api-1",
          "name": "API Versioning",
          "weight": 25,
          "description": "Check API version management"
        },
        {
          "id": "api-2",
          "name": "Documentation",
          "weight": 25,
          "description": "Validate API documentation completeness"
        },
        {
          "id": "api-3",
          "name": "Backward Compatibility",
          "weight": 30,
          "description": "Test backward compatibility with previous versions"
        },
        {
          "id": "api-4",
