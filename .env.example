# NoxSuite Security Platform - Environment Variables
# Copy this file to .env and set your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///noxsuite.db
MARIADB_URL=mysql://user:password@localhost:3306/noxsuite

# Security Configuration
SECRET_KEY=your_secret_key_here_32_chars_min
JWT_SECRET_KEY=your_jwt_secret_key_here

# MFA Configuration
MFA_ISSUER=NoxSuite Security Platform
MFA_BACKUP_CODES_COUNT=8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/noxsuite.log

# Development Configuration
DEBUG=False
TESTING=False

# External Service URLs
LANGFLOW_URL=http://localhost:7860
PROJECT_ID=d602c2ae-497e-49cf-9e7b-f503ef844007

# Email Configuration (for notifications)
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SECURITY_EMAIL=security@noxsuite.local

# Redis Configuration (if using Redis for sessions)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
