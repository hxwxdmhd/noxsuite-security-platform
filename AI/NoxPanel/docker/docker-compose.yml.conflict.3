# NoxPanel - Core Docker Compose Configuration
# Audit Gate 1: Single service containerization only
# Multi-container orchestration locked until audit gates are passed

version: '3.8'

services:
  noxpanel:
    build:
      context: ..
      dockerfile: docker/Dockerfile
    container_name: noxpanel-core
    ports:
      - "5000:5000"
    environment:
      - FLASK_ENV=production
      - HOST=0.0.0.0
      - PORT=5000
    env_file:
      - ../.env
    volumes:
      - ../data:/app/data
      - ../logs:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "python", "-c", "import requests; requests.get('http://localhost:5000/', timeout=10)"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

# Additional services (Redis, TTS, Nginx, etc.) are LOCKED
# Until audit gates 1-4 are passed with 100/100 score
# Refer to /docs/audit_plan.md for unlock requirements
