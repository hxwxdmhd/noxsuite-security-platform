    },
    "script_runner": {
      "enabled": true,
      "priority": "medium"
    },
    "media_center": {
      "enabled": true,
      "priority": "medium"
    },
    "pi_monitor": {
      "enabled": true,
      "priority": "medium"
    },
    "setup_wizard": {
      "enabled": true,
      "priority": "high"
    },
    "analytics": {
      "enabled": true,
      "priority": "medium"
