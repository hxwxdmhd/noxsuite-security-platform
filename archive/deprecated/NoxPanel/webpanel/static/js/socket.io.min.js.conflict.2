// Basic WebSocket fallback for Socket.IO compatibility
(function() {
    if (typeof io === 'undefined') {
        window.io = function(url) {
            return {
                on: function(event, callback) {
                    console.log('Socket.IO not available - event:', event);
                },
                emit: function(event, data) {
                    console.log('Socket.IO not available - emit:', event, data);
                },
                disconnect: function() {
                    console.log('Socket.IO disconnect called');
                }
            };
        };
    }
})();
