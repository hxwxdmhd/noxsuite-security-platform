/* NoxPanel v4.3 - Enhanced Theme System with ADHD-Friendly Design
 * Comprehensive theming with dark mode fixes, purple variants, and cognitive accessibility
 */

/* ===== CORE CSS CUSTOM PROPERTIES ===== */
:root {
  /* Light Theme Base */
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #e9ecef;
  --bg-card: #ffffff;
  --bg-sidebar: #343a40;
  --bg-hover: #f1f3f4;
  --bg-active: #e3f2fd;
  --bg-input: #ffffff;
  --bg-overlay: rgba(0, 0, 0, 0.5);
  
  /* Button States */
  --bg-button-primary: #007bff;
  --bg-button-primary-hover: #0056b3;
  --bg-button-secondary: #6c757d;
  --bg-button-secondary-hover: #545b62;
  --bg-button-success: #28a745;
  --bg-button-success-hover: #1e7e34;
  --bg-button-warning: #ffc107;
  --bg-button-warning-hover: #e0a800;
  --bg-button-danger: #dc3545;
  --bg-button-danger-hover: #c82333;
  
  /* Text Colors */
  --text-primary: #212529;
  --text-secondary: #6c757d;
  --text-muted: #adb5bd;
  --text-inverse: #ffffff;
  --text-link: #007bff;
  --text-link-hover: #0056b3;
  --text-success: #155724;
  --text-warning: #856404;
  --text-danger: #721c24;
  --text-info: #0c5460;
  
  /* Border and Outline Colors */
  --border-primary: #dee2e6;
  --border-secondary: #e9ecef;
  --border-accent: #007bff;
  --border-focus: #80bdff;
  --border-success: #28a745;
  --border-warning: #ffc107;
  --border-danger: #dc3545;
  
  /* Shadow System */
  --shadow-xs: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --shadow-sm: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
  --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 1rem 2rem rgba(0, 0, 0, 0.2);
  --shadow-xl: 0 2rem 4rem rgba(0, 0, 0, 0.25);
  
  /* ADHD-Friendly Enhancements */
  --focus-ring: 0 0 0 3px rgba(0, 123, 255, 0.25);
  --focus-ring-width: 3px;
  --animation-speed: 0.2s;
  --animation-easing: cubic-bezier(0.4, 0, 0.2, 1);
  --chunk-spacing: 1.5rem;
  --visual-rhythm: 8px;
  
  /* Theme Transition */
  --theme-transition: all 0.3s var(--animation-easing);
}

/* ===== DARK THEME OVERRIDES ===== */
