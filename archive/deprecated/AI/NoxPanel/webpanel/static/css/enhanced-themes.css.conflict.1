  --border-accent: #0d6efd;
  --border-focus: #4dabf7;
  --border-success: #198754;
  --border-warning: #fd7e14;
  --border-danger: #dc3545;
  
  /* Dark Shadows */
  --shadow-xs: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.4);
  --shadow-sm: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.5);
  --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.6);
