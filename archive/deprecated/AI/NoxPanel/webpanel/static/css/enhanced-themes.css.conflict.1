  --bg-active: #1a365d;
  --bg-input: #2d2d2d;
  --bg-overlay: rgba(0, 0, 0, 0.8);
  
  /* Dark Button States */
  --bg-button-primary: #0d6efd;
  --bg-button-primary-hover: #0b5ed7;
  --bg-button-secondary: #495057;
  --bg-button-secondary-hover: #6c757d;
  --bg-button-success: #198754;
  --bg-button-success-hover: #146c43;
