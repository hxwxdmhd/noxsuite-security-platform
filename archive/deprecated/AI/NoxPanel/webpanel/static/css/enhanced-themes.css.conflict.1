/* ===== UNIVERSAL THEME APPLICATION ===== */

/* Global Element Theming */
* {
  transition: var(--theme-transition);
}

body {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  line-height: 1.6;
}

/* Cards and Containers */
.card {
  background-color: var(--bg-card);
  border: 1px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--chunk-spacing);
}

.card-header {
  background-color: var(--bg-secondary);
  border-bottom: 1px solid var(--border-primary);
  color: var(--text-primary);
  padding: 1rem;
  border-radius: var(--visual-rhythm) var(--visual-rhythm) 0 0;
}

.card-body {
  color: var(--text-primary);
  padding: 1.5rem;
}

/* Navigation and Sidebar */
.navbar {
  background-color: var(--bg-sidebar) !important;
  border-bottom: 1px solid var(--border-primary);
  box-shadow: var(--shadow-sm);
}

.navbar-brand, 
.navbar-nav .nav-link {
  color: var(--text-inverse) !important;
  transition: var(--theme-transition);
}

.navbar-nav .nav-link:hover {
  color: var(--text-link) !important;
}

.sidebar {
  background-color: var(--bg-sidebar);
  color: var(--text-inverse);
  border-right: 1px solid var(--border-primary);
  box-shadow: var(--shadow-md);
}

.sidebar .nav-link {
  color: var(--text-inverse);
  border-radius: var(--visual-rhythm);
  margin-bottom: 0.5rem;
  padding: 0.75rem 1rem;
  transition: var(--theme-transition);
}

.sidebar .nav-link:hover {
  background-color: var(--bg-hover);
  transform: translateX(4px);
}

.sidebar .nav-link.active {
  background-color: var(--bg-button-primary);
  box-shadow: var(--shadow-sm);
}

/* Form Controls */
.form-control {
  background-color: var(--bg-input);
  border: 2px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  color: var(--text-primary);
  padding: 0.75rem;
  transition: var(--theme-transition);
}

.form-control:focus {
  background-color: var(--bg-input);
  border-color: var(--border-accent);
  box-shadow: var(--focus-ring);
  color: var(--text-primary);
  outline: none;
}

.form-control::placeholder {
  color: var(--text-muted);
  opacity: 0.8;
}

/* Button System */
.btn {
  border-radius: var(--visual-rhythm);
  border-width: 2px;
  font-weight: 600;
  padding: 0.75rem 1.5rem;
  transition: var(--theme-transition);
  cursor: pointer;
}

.btn:focus {
  box-shadow: var(--focus-ring);
  outline: none;
}

.btn-primary {
  background-color: var(--bg-button-primary);
  border-color: var(--bg-button-primary);
  color: var(--text-inverse);
}

.btn-primary:hover {
  background-color: var(--bg-button-primary-hover);
  border-color: var(--bg-button-primary-hover);
  transform: translateY(-2px);
}

.btn-secondary {
  background-color: var(--bg-button-secondary);
  border-color: var(--bg-button-secondary);
  color: var(--text-inverse);
}

.btn-secondary:hover {
  background-color: var(--bg-button-secondary-hover);
  border-color: var(--bg-button-secondary-hover);
}

.btn-success {
  background-color: var(--bg-button-success);
  border-color: var(--bg-button-success);
  color: var(--text-inverse);
}

.btn-success:hover {
  background-color: var(--bg-button-success-hover);
  border-color: var(--bg-button-success-hover);
}

.btn-warning {
  background-color: var(--bg-button-warning);
  border-color: var(--bg-button-warning);
  color: var(--text-inverse);
}

.btn-warning:hover {
  background-color: var(--bg-button-warning-hover);
  border-color: var(--bg-button-warning-hover);
}

.btn-danger {
  background-color: var(--bg-button-danger);
  border-color: var(--bg-button-danger);
  color: var(--text-inverse);
}

.btn-danger:hover {
  background-color: var(--bg-button-danger-hover);
  border-color: var(--bg-button-danger-hover);
}

/* Links */
a {
  color: var(--text-link);
  text-decoration: none;
  transition: var(--theme-transition);
}

a:hover {
  color: var(--text-link-hover);
  text-decoration: underline;
}

a:focus {
  outline: var(--focus-ring-width) solid var(--border-focus);
  outline-offset: 2px;
}

/* Tables */
.table {
  color: var(--text-primary);
}

.table th {
  background-color: var(--bg-secondary);
  border-color: var(--border-primary);
  color: var(--text-primary);
}

.table td {
  border-color: var(--border-primary);
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: var(--bg-secondary);
}

.table-hover tbody tr:hover {
  background-color: var(--bg-hover);
}

/* Modals and Overlays */
.modal-content {
  background-color: var(--bg-card);
  border: 1px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  box-shadow: var(--shadow-xl);
}

.modal-header {
  background-color: var(--bg-secondary);
  border-bottom: 1px solid var(--border-primary);
  color: var(--text-primary);
}

.modal-body {
  background-color: var(--bg-card);
  color: var(--text-primary);
}

.modal-footer {
  background-color: var(--bg-secondary);
  border-top: 1px solid var(--border-primary);
}

/* Alerts and Status Messages */
.alert {
  border-radius: var(--visual-rhythm);
  border-width: 2px;
  margin-bottom: var(--chunk-spacing);
  padding: 1rem 1.5rem;
}

.alert-success {
  background-color: var(--bg-button-success);
  border-color: var(--border-success);
  color: var(--text-inverse);
}

.alert-warning {
  background-color: var(--bg-button-warning);
  border-color: var(--border-warning);
  color: var(--text-inverse);
}

.alert-danger {
  background-color: var(--bg-button-danger);
  border-color: var(--border-danger);
  color: var(--text-inverse);
}

.alert-info {
  background-color: var(--bg-button-primary);
  border-color: var(--border-accent);
  color: var(--text-inverse);
}

/* ===== ADHD-FRIENDLY ENHANCEMENTS ===== */

/* Visual Chunking */
.content-chunk {
  background-color: var(--bg-card);
  border: 1px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  margin-bottom: var(--chunk-spacing);
  padding: 1.5rem;
  box-shadow: var(--shadow-sm);
}

/* Color Coding for Quick Recognition */
.status-success {
  border-left: 4px solid var(--bg-button-success);
}

.status-warning {
  border-left: 4px solid var(--bg-button-warning);
}

.status-danger {
  border-left: 4px solid var(--bg-button-danger);
}

.status-info {
  border-left: 4px solid var(--bg-button-primary);
}

/* Enhanced Focus States */
.enhanced-focus:focus {
  box-shadow: var(--focus-ring);
  outline: none;
  transform: scale(1.02);
}

/* Loading States */
.loading-indicator {
  border: 3px solid var(--border-primary);
  border-top: 3px solid var(--bg-button-primary);
  border-radius: 50%;
  width: 24px;
  height: 24px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Progress Indicators */
.progress {
  background-color: var(--bg-secondary);
  border-radius: var(--visual-rhythm);
  height: 8px;
  overflow: hidden;
}

.progress-bar {
  background-color: var(--bg-button-primary);
  border-radius: var(--visual-rhythm);
  transition: width var(--animation-speed) var(--animation-easing);
}

/* Theme Toggle Button */
.theme-selector {
  background-color: var(--bg-card);
  border: 2px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  padding: 1rem;
  margin-bottom: var(--chunk-spacing);
}

.theme-option {
  background-color: var(--bg-button-secondary);
  border: 2px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  color: var(--text-inverse);
  cursor: pointer;
  margin: 0.25rem;
  padding: 0.5rem 1rem;
  transition: var(--theme-transition);
}

.theme-option:hover {
  background-color: var(--bg-button-secondary-hover);
  transform: translateY(-2px);
}

.theme-option.active {
  background-color: var(--bg-button-primary);
  border-color: var(--border-accent);
}

/* Responsive Design Enhancements */
@media (max-width: 768px) {
  :root {
    --chunk-spacing: 1rem;
    --visual-rhythm: 6px;
  }
  
  .card-body {
    padding: 1rem;
  }
  
  .btn {
    padding: 0.625rem 1.25rem;
  }
  
  .sidebar .nav-link {
    padding: 0.625rem 0.875rem;
  }
}

@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  :root {
    --border-primary: currentColor;
    --focus-ring-width: 4px;
  }
  
  .btn {
    border-width: 3px;
  }
  
  .form-control {
    border-width: 3px;
  }
}

/* ===== INTEGRATION WITH VISUAL ENHANCEMENTS ===== */

/* Chart and Visual Component Theming */
.chart-container {
  background-color: var(--bg-card);
  border: 1px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  padding: 1.5rem;
  margin-bottom: var(--chunk-spacing);
  box-shadow: var(--shadow-sm);
}

.metric-card {
  background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
  border: 1px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  color: var(--text-primary);
  padding: 1.5rem;
  box-shadow: var(--shadow-md);
  transition: var(--theme-transition);
}

.metric-card:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-4px);
}

.gauge-container {
  background-color: var(--bg-card);
  border-radius: var(--visual-rhythm);
  padding: 1rem;
  text-align: center;
}

.visual-grid {
  display: grid;
  gap: var(--chunk-spacing);
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

/* Command Result Styling */
.command-result {
  background-color: var(--bg-input);
  border: 2px solid var(--border-primary);
  border-radius: var(--visual-rhythm);
  color: var(--text-primary);
  font-family: 'Courier New', monospace;
  max-height: 400px;
  overflow-y: auto;
  padding: 1rem;
  white-space: pre-wrap;
}

.command-success {
  border-color: var(--border-success);
  background-color: var(--bg-button-success);
  color: var(--text-inverse);
}

.command-error {
  border-color: var(--border-danger);
  background-color: var(--bg-button-danger);
  color: var(--text-inverse);
}

/* ===== ACCESSIBILITY ENHANCEMENTS ===== */

/* Screen Reader Support */
.sr-only {
  clip: rect(0, 0, 0, 0);
  clip-path: inset(50%);
  height: 1px;
  overflow: hidden;
  position: absolute;
  white-space: nowrap;
  width: 1px;
}

/* Focus Management */
.skip-link {
  background-color: var(--bg-button-primary);
  color: var(--text-inverse);
  left: -9999px;
  padding: 0.5rem 1rem;
  position: absolute;
  text-decoration: none;
  top: 0;
  z-index: 10000;
}

.skip-link:focus {
  left: 0;
}

/* Print Styles */
@media print {
  * {
    background: white !important;
    color: black !important;
    box-shadow: none !important;
  }
  
  .no-print {
    display: none !important;
  }
}
