  --text-secondary: #adb5bd;
  --text-muted: #6c757d;
  --text-inverse: #212529;
  --text-link: #6ea8fe;
  --text-link-hover: #9ec5fe;
  --text-success: #75b798;
  --text-warning: #ffda6a;
  --text-danger: #f1aeb5;
  --text-info: #6edff6;
  
  /* Dark Borders */
  --border-primary: #404040;
