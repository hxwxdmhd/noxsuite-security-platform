/* NoxPanel v3.1 - Universal Theme System */

:root {
  /* Light Theme Variables */
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #e9ecef;
  --bg-card: #ffffff;
  --bg-sidebar: #343a40;
  --bg-chat-user: #007bff;
  --bg-chat-bot: #e9ecef;
  --bg-input: #ffffff;
  --bg-button: #007bff;
  --bg-button-hover: #0056b3;
  --bg-success: #28a745;
  --bg-warning: #ffc107;
  --bg-danger: #dc3545;
  
  /* Text Colors */
  --text-primary: #212529;
  --text-secondary: #6c757d;
  --text-muted: #6c757d;
  --text-inverse: #ffffff;
  --text-link: #007bff;
  --text-success: #155724;
  --text-warning: #856404;
  --text-danger: #721c24;
  
  /* Border Colors */
  --border-color: #dee2e6;
  --border-light: #e9ecef;
  --border-dark: #adb5bd;
  
  /* Shadow */
  --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
  
  /* Theme Toggle */
  --theme-transition: all 0.3s ease;
}

[data-theme="dark"] {
  /* Dark Theme Variables */
  --bg-primary: #1a1a1a;
  --bg-secondary: #2d2d2d;
  --bg-tertiary: #404040;
  --bg-card: #2d2d2d;
  --bg-sidebar: #1a1a1a;
  --bg-chat-user: #0d6efd;
  --bg-chat-bot: #404040;
  --bg-input: #404040;
  --bg-button: #0d6efd;
  --bg-button-hover: #0b5ed7;
  --bg-success: #198754;
  --bg-warning: #fd7e14;
  --bg-danger: #dc3545;
  
  /* Text Colors */
  --text-primary: #ffffff;
  --text-secondary: #adb5bd;
  --text-muted: #6c757d;
  --text-inverse: #000000;
  --text-link: #0d6efd;
  --text-success: #75b798;
  --text-warning: #ffda6a;
  --text-danger: #f1aeb5;
  
  /* Border Colors */
  --border-color: #404040;
  --border-light: #2d2d2d;
  --border-dark: #6c757d;
  
  /* Shadow */
  --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.3);
  --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.5);
}

/* Global Styles */
* {
  transition: var(--theme-transition);
}

body {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* Cards and Containers */
.card {
  background-color: var(--bg-card);
  border-color: var(--border-color);
  box-shadow: var(--shadow-sm);
}

.card-header {
  background-color: var(--bg-secondary);
  border-bottom-color: var(--border-color);
  color: var(--text-primary);
}

.card-body {
  color: var(--text-primary);
}

/* Navigation and Sidebar */
.navbar {
  background-color: var(--bg-sidebar) !important;
}

.navbar-brand, .navbar-nav .nav-link {
  color: var(--text-inverse) !important;
}

.sidebar {
  background-color: var(--bg-sidebar);
  color: var(--text-inverse);
}

.sidebar .nav-link {
  color: var(--text-inverse);
  border-radius: 0.375rem;
  margin-bottom: 0.25rem;
}

.sidebar .nav-link:hover {
  background-color: var(--bg-tertiary);
}

.sidebar .nav-link.active {
  background-color: var(--bg-button);
}

/* Forms and Inputs */
.form-control {
  background-color: var(--bg-input);
  border-color: var(--border-color);
  color: var(--text-primary);
}

.form-control:focus {
  background-color: var(--bg-input);
  border-color: var(--bg-button);
  box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
  color: var(--text-primary);
}

.form-control::placeholder {
  color: var(--text-muted);
}

/* Buttons */
.btn {
  border-radius: 0.375rem;
  transition: var(--theme-transition);
}

.btn-primary {
  background-color: var(--bg-button);
  border-color: var(--bg-button);
}

.btn-primary:hover {
  background-color: var(--bg-button-hover);
  border-color: var(--bg-button-hover);
}

.btn-outline-primary {
  color: var(--bg-button);
  border-color: var(--bg-button);
}

.btn-outline-primary:hover {
  background-color: var(--bg-button);
  border-color: var(--bg-button);
}

.btn-outline-secondary {
  color: var(--text-secondary);
  border-color: var(--border-color);
}

.btn-outline-secondary:hover {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

/* Tables */
.table {
  color: var(--text-primary);
}

.table-dark {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: var(--bg-secondary);
}

.table-hover tbody tr:hover {
  background-color: var(--bg-tertiary);
}

/* Chat Interface */
.chat-container {
  background-color: var(--bg-secondary);
  border-color: var(--border-color);
}

.message {
  border-radius: 0.75rem;
  transition: var(--theme-transition);
}

.user-message {
  background-color: var(--bg-chat-user);
  color: var(--text-inverse);
}

.bot-message {
  background-color: var(--bg-chat-bot);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.typing-indicator {
  color: var(--text-muted);
}

/* Badges */
.badge {
  border-radius: 0.375rem;
}

.badge.bg-success {
  background-color: var(--bg-success) !important;
}

.badge.bg-warning {
  background-color: var(--bg-warning) !important;
  color: var(--text-inverse) !important;
}

.badge.bg-danger {
  background-color: var(--bg-danger) !important;
}

/* Alerts */
.alert {
  border-radius: 0.5rem;
  border-width: 1px;
}

.alert-success {
  background-color: var(--bg-success);
  border-color: var(--bg-success);
  color: var(--text-inverse);
}

.alert-warning {
  background-color: var(--bg-warning);
  border-color: var(--bg-warning);
  color: var(--text-inverse);
}

.alert-danger {
  background-color: var(--bg-danger);
  border-color: var(--bg-danger);
  color: var(--text-inverse);
}

/* Progress bars */
.progress {
  background-color: var(--bg-tertiary);
}

.progress-bar {
  background-color: var(--bg-button);
}

/* Modals */
.modal-content {
  background-color: var(--bg-card);
  border-color: var(--border-color);
}

.modal-header {
  border-bottom-color: var(--border-color);
}

.modal-footer {
  border-top-color: var(--border-color);
}

/* Dropdowns */
.dropdown-menu {
  background-color: var(--bg-card);
  border-color: var(--border-color);
  box-shadow: var(--shadow);
}

.dropdown-item {
  color: var(--text-primary);
}

.dropdown-item:hover {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

/* Theme Toggle Button */
.theme-toggle {
  position: fixed;
  top: 1rem;
  right: 1rem;
  z-index: 1050;
  padding: 0.5rem;
  border-radius: 50%;
  border: 2px solid var(--border-color);
  background-color: var(--bg-card);
  color: var(--text-primary);
  cursor: pointer;
  box-shadow: var(--shadow);
  transition: var(--theme-transition);
}

.theme-toggle:hover {
  background-color: var(--bg-button);
  color: var(--text-inverse);
  transform: scale(1.1);
}

/* Scrollbars */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--border-dark);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-secondary);
}

/* Code blocks */
pre, code {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

/* Status indicators */
.status-indicator {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  margin-right: 0.5rem;
}

.status-online {
  background-color: var(--bg-success);
}

.status-offline {
  background-color: var(--text-muted);
}

.status-error {
  background-color: var(--bg-danger);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .theme-toggle {
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.375rem;
  }
  
  .chat-container {
    height: 60vh;
  }
  
  .sidebar {
    position: fixed;
    top: 0;
    left: -250px;
    width: 250px;
    height: 100vh;
    z-index: 1040;
    transition: left 0.3s ease;
  }
  
  .sidebar.show {
    left: 0;
  }
}

/* Animation classes */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { transform: translateY(-10px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
