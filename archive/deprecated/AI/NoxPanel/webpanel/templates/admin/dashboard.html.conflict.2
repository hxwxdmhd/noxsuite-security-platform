{% extends "base.html" %}

{% block title %}Admin Dashboard - NoxPanel{% endblock %}

{% block extra_css %}
<style>
.admin-card {
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    background: var(--card-bg);
}

.admin-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.stat-card {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border-radius: 15px;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transform: translate(30px, -30px);
}

.stat-icon {
    font-size: 2.5rem;
    opacity: 0.8;
}

.quick-action-btn {
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 2px solid var(--border-color);
}

.quick-action-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    border-color: var(--primary-color);
}

.recent-activity {
    max-height: 400px;
    overflow-y: auto;
}

.activity-item {
    padding: 0.75rem;
    border-left: 3px solid var(--primary-color);
    margin-bottom: 0.5rem;
    background: var(--bg-light);
    border-radius: 0 8px 8px 0;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .stat-card {
        margin-bottom: 1rem;
    }
    
    .quick-action-btn {
        height: 80px;
        margin-bottom: 1rem;
    }
}
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">âš¡ Admin Dashboard</h1>
                    <p class="text-muted mb-0">System administration and user management</p>
                </div>
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">Welcome, {{ session.username }}!</span>
                    <div class="btn-group">
                        <a href="{{ url_for('admin.logout') }}" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">{{ stats.total_users or 0 }}</h2>
                        <p class="mb-0 opacity-75">Total Users</p>
                    </div>
                    <i class="fas fa-users stat-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #28a745, #20c997);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">{{ stats.active_users or 0 }}</h2>
                        <p class="mb-0 opacity-75">Active Users</p>
                    </div>
                    <i class="fas fa-user-check stat-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">{{ stats.total_roles or 0 }}</h2>
                        <p class="mb-0 opacity-75">User Roles</p>
                    </div>
                    <i class="fas fa-user-tag stat-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #17a2b8, #6610f2);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">{{ stats.active_sessions or 0 }}</h2>
                        <p class="mb-0 opacity-75">Active Sessions</p>
                    </div>
                    <i class="fas fa-clock stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="admin-card p-3">
                <h5 class="mb-3">
                    <i class="fas fa-bolt text-primary me-2"></i>Quick Actions
                </h5>
                <div class="row g-2">
                    <div class="col-6">
                        <a href="{{ url_for('admin.create_user') }}" class="quick-action-btn btn btn-outline-primary">
                            <i class="fas fa-user-plus fa-2x mb-2"></i>
                            <span>Add User</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="{{ url_for('admin.users_list') }}" class="quick-action-btn btn btn-outline-success">
                            <i class="fas fa-users-cog fa-2x mb-2"></i>
                            <span>Manage Users</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="{{ url_for('admin.roles_list') }}" class="quick-action-btn btn btn-outline-warning">
                            <i class="fas fa-user-shield fa-2x mb-2"></i>
                            <span>User Roles</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="{{ url_for('admin.modules_list') }}" class="quick-action-btn btn btn-outline-info">
                            <i class="fas fa-puzzle-piece fa-2x mb-2"></i>
                            <span>Assign Modules</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="col-lg-8 mb-4">
            <div class="admin-card p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">
                        <i class="fas fa-user-clock text-primary me-2"></i>Recent Users
                    </h5>
                    <a href="{{ url_for('admin.users_list') }}" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                
                {% if recent_users %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Created</th>
                                <th>Last Login</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in recent_users %}
                            <tr>
                                <td>
                                    <strong>{{ user[0] }}</strong>
                                </td>
                                <td>{{ user[1] }}</td>
                                <td>
                                    <span class="badge bg-{{ 'danger' if user[2] == 'admin' else 'primary' if user[2] == 'moderator' else 'secondary' }}">
                                        {{ user[2].title() }}
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {{ user[3] }}
                                    </small>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {{ user[4] or 'Never' }}
                                    </small>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No users found</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="admin-card p-3">
                <h5 class="mb-3">
                    <i class="fas fa-server text-primary me-2"></i>System Status
                </h5>
                <div class="row">
                    <div class="col-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                            <span>Database</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                            <span>Web Server</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                            <span>AI Monitor</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                            <span>Plugin System</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-6 mb-4">
            <div class="admin-card p-3">
                <h5 class="mb-3">
                    <i class="fas fa-history text-primary me-2"></i>Recent Activity
                </h5>
                <div class="recent-activity">
                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <span><strong>admin</strong> logged in</span>
                            <small class="text-muted">2 min ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <span>AI Monitor started</span>
                            <small class="text-muted">5 min ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <span>Plugin system initialized</span>
                            <small class="text-muted">10 min ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <span>Database backup completed</span>
                            <small class="text-muted">1 hour ago</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
// Auto-refresh stats every 30 seconds
setInterval(function() {
    fetch('/admin/api/stats')
        .then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                // Update stats if needed
                console.log('Stats updated');
            }
        })
        .catch(error => console.log('Stats refresh failed'));
}, 30000);

// Add loading states to quick action buttons
document.querySelectorAll('.quick-action-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
        const icon = this.querySelector('i');
        const originalClass = icon.className;
        icon.className = 'fas fa-spinner fa-spin fa-2x mb-2';
        
        setTimeout(() => {
            icon.className = originalClass;
        }, 1000);
    });
});
</script>
{% endblock %}
