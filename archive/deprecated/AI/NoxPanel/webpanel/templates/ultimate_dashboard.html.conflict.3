    <script>
        // Ultimate Dashboard JavaScript
        class UltimateDashboard {
            constructor() {
                this.init();
            }
            
            init() {
                this.hideLoading();
                this.loadSystemStatus();
                this.setupEventListeners();
                this.initializeThemeManager();
            }
            
            hideLoading() {
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.opacity = '0';
                    setTimeout(() => {
                        document.getElementById('loadingOverlay').style.visibility = 'hidden';
                    }, 300);
                }, 500);
            }
            
            async loadSystemStatus() {
                try {
                    // Load AI models count
                    const modelsResponse = await fetch('/api/models');
                    if (modelsResponse.ok) {
                        const modelsData = await modelsResponse.json();
                        document.getElementById('aiModelsCount').textContent = modelsData.total || 9;
                    }
                    
                    // Load network devices
                    const devicesResponse = await fetch('/api/network/devices');
                    if (devicesResponse.ok) {
                        const devicesData = await devicesResponse.json();
                        document.getElementById('networkDevices').textContent = devicesData.total || 'N/A';
                    }
                    
                    // Load security status
                    const securityResponse = await fetch('/api/security/status');
                    if (securityResponse.ok) {
                        const securityData = await securityResponse.json();
                        document.getElementById('securityLevel').textContent = securityData.level.toUpperCase();
                    }
                    
                } catch (error) {
                    console.warn('Status loading failed:', error);
                }
            }
            
            setupEventListeners() {
                // Add keyboard shortcuts
                document.addEventListener('keydown', (e) => {
                    if (e.ctrlKey && e.shiftKey) {
                        switch (e.key) {
                            case 'H':
                                e.preventDefault();
                                window.location.href = '/heimnetz';
                                break;
                            case 'N':
                                e.preventDefault();
                                window.location.href = '/noxpanel';
                                break;
                            case 'S':
                                e.preventDefault();
                                window.location.href = '/noxguard';
                                break;
                            case 'T':
                                e.preventDefault();
                                this.cycleTheme();
                                break;
                        }
                    }
                });
                
                // Add card hover effects
                document.querySelectorAll('.suite-card').forEach(card => {
                    card.addEventListener('mouseenter', () => {
                        card.style.transform = 'translateY(-8px) scale(1.02)';
                    });
                    
                    card.addEventListener('mouseleave', () => {
                        card.style.transform = 'translateY(0) scale(1)';
                    });
                });
            }
            
            initializeThemeManager() {
                // Enhanced theme manager integration
                if (window.EnhancedThemeManager) {
                    this.themeManager = new window.EnhancedThemeManager();
                }
            }
            
            cycleTheme() {
                const themes = ['light', 'dark', 'purple', 'purple-dark', 'purple-high-contrast'];
                const current = document.documentElement.getAttribute('data-theme') || 'purple';
                const currentIndex = themes.indexOf(current);
                const nextTheme = themes[(currentIndex + 1) % themes.length];
                this.setTheme(nextTheme);
            }
        }
        
        // Theme Management Functions
        async function setTheme(themeName) {
            try {
                const response = await fetch(`/theme/${themeName}`, { method: 'POST' });
                if (response.ok) {
                    document.documentElement.setAttribute('data-theme', themeName);
                    localStorage.setItem('ultimate-theme', themeName);
                    
                    // Visual feedback
                    showNotification(`Theme changed to ${themeName}`, 'success');
                }
            } catch (error) {
                console.error('Theme change failed:', error);
                showNotification('Theme change failed', 'error');
            }
        }
        
        function toggleADHD() {
            const body = document.body;
            const isADHD = body.classList.contains('adhd-mode');
            
            if (isADHD) {
                body.classList.remove('adhd-mode');
                document.documentElement.setAttribute('data-adhd-mode', 'false');
                localStorage.setItem('ultimate-adhd', 'false');
                showNotification('ADHD-friendly mode disabled', 'info');
            } else {
                body.classList.add('adhd-mode');
                document.documentElement.setAttribute('data-adhd-mode', 'true');
                localStorage.setItem('ultimate-adhd', 'true');
                showNotification('ADHD-friendly mode enabled', 'success');
            }
        }
        
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 2rem;
                right: 2rem;
                background: var(--bg-card);
                color: var(--text-primary);
                padding: 1rem 1.5rem;
                border-radius: 8px;
                border-left: 4px solid var(--accent-primary);
                box-shadow: var(--shadow-lg);
                z-index: 10000;
                opacity: 0;
                transform: translateX(100%);
                transition: all 0.3s ease;
            `;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.opacity = '1';
                notification.style.transform = 'translateX(0)';
            }, 10);
            
            // Animate out
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }
        
        // Initialize dashboard when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            window.ultimateDashboard = new UltimateDashboard();
            
            // Restore theme and ADHD mode from localStorage
            const savedTheme = localStorage.getItem('ultimate-theme');
            const savedADHD = localStorage.getItem('ultimate-adhd');
            
            if (savedTheme) {
                document.documentElement.setAttribute('data-theme', savedTheme);
            }
            
            if (savedADHD === 'true') {
                document.body.classList.add('adhd-mode');
                document.documentElement.setAttribute('data-adhd-mode', 'true');
            }
        });
        
        // Service Worker for offline capability
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/static/js/sw.js').catch(console.error);
        }
    </script>
