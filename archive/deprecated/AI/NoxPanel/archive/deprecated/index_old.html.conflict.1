                            <a href="{{ url_for('knowledge.search', type='best_practice') }}" class="btn btn-outline-dark btn-lg w-100 mb-2">
                                <i class="fas fa-award d-block mb-2"></i>
                                Best Practices
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="{{ url_for('knowledge.search', type='script') }}" class="btn btn-outline-secondary btn-lg w-100 mb-2">
                                <i class="fas fa-file-code d-block mb-2"></i>
                                Scripts
                            </a>
                        </div>
                    </div>
