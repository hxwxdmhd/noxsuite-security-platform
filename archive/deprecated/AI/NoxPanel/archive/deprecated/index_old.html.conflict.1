            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-star"></i> Featured Items</h5>
                </div>
                <div class="card-body">
                    {% for item in featured_items %}
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6><a href="{{ url_for('knowledge.view_item', item_id=item.id) }}">{{ item.title }}</a></h6>
