                                <div class="small">
                                    <span class="badge bg-primary">{{ item.content_type.value }}</span>
                                    {% if item.language %}
                                    <span class="badge bg-secondary">{{ item.language.value }}</span>
                                    {% endif %}
                                    {% for tag in item.tags[:3] %}
                                    <span class="badge bg-light text-dark">{{ tag }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="small text-muted">
                                    ⭐ {{ item.rating }} | 👁 {{ item.usage_count }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Recent Items -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Items</h5>
                </div>
                <div class="card-body">
                    {% for item in recent_items %}
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6><a href="{{ url_for('knowledge.view_item', item_id=item.id) }}">{{ item.title }}</a></h6>
                                <p class="text-muted small mb-1">{{ item.content|truncate_words(15) }}</p>
                                <div class="small">
                                    <span class="badge bg-primary">{{ item.content_type.value }}</span>
                                    {% if item.topic %}
                                    <span class="badge bg-info">{{ item.topic }}</span>
                                    {% endif %}
