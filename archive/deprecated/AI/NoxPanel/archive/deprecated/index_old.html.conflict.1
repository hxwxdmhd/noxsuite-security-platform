            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> Top Topics</h5>
                </div>
                <div class="card-body">
                    {% for topic, count in stats.top_topics.items() %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>{{ topic.title() }}</span>
                        <div>
