/* Visual Enhancements System v7.0 */
/* Advanced visual effects and animations for Ultimate Dashboard */

/* Glass morphism effects */
.glass-effect {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

/* Gradient animations */
@keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

.animated-gradient {
    background: linear-gradient(-45deg, 
        var(--theme-primary), 
        var(--theme-secondary), 
        var(--theme-accent), 
        var(--theme-primary));
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
}

/* Pulse effects */
@keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.8; }
    100% { transform: scale(1); opacity: 1; }
}

.pulse-effect {
    animation: pulse 2s ease-in-out infinite;
}

/* Floating elements */
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

.floating-element {
    animation: float 3s ease-in-out infinite;
}

/* Glow effects */
.glow-effect {
    box-shadow: 
        0 0 20px rgba(var(--theme-primary-rgb), 0.3),
        0 0 40px rgba(var(--theme-primary-rgb), 0.2),
        0 0 60px rgba(var(--theme-primary-rgb), 0.1);
}

/* Hover transformations */
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

/* Progress indicators */
.progress-ring {
    transform: rotate(-90deg);
}

.progress-ring-circle {
    stroke-dasharray: 251.2;
    stroke-dashoffset: 251.2;
    transition: stroke-dashoffset 0.5s ease;
    stroke: var(--theme-primary);
    stroke-width: 4;
    fill: transparent;
}

/* Particle effects */
.particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
}

.particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: var(--theme-primary);
    border-radius: 50%;
    opacity: 0.6;
    animation: particleFloat 10s linear infinite;
}

@keyframes particleFloat {
    0% {
        transform: translateY(100vh) translateX(0);
        opacity: 0;
    }
    10% {
        opacity: 0.6;
    }
    90% {
        opacity: 0.6;
    }
    100% {
        transform: translateY(-10vh) translateX(100px);
        opacity: 0;
    }
}

/* Smooth scrolling */
html {
    scroll-behavior: smooth;
}

/* Custom scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: var(--theme-surface);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb {
    background: var(--theme-primary);
    border-radius: 4px;
    transition: background 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--theme-secondary);
}

/* Loading animations */
.spinner {
    width: 40px;
    height: 40px;
    border: 4px solid var(--theme-surface);
    border-top: 4px solid var(--theme-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Ripple effect */
.ripple {
    position: relative;
    overflow: hidden;
}

.ripple::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.ripple:active::before {
    width: 300px;
    height: 300px;
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    .animated-gradient,
    .pulse-effect,
    .floating-element,
    .particle {
        animation: none;
    }
    
    .hover-lift {
        transition: none;
    }
}

/* High contrast adjustments */
@media (prefers-contrast: high) {
    .glass-effect {
        background: rgba(0, 0, 0, 0.9);
        border: 2px solid #ffffff;
    }
    
    .glow-effect {
        box-shadow: none;
        border: 2px solid var(--theme-primary);
    }
}

/* Focus management */
.focus-trap {
    position: relative;
}

.focus-trap:focus-within {
    outline: 2px solid var(--theme-primary);
    outline-offset: 2px;
}

/* Responsive visual effects */
@media (max-width: 768px) {
    .glass-effect {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }
    
    .particles {
        display: none;
    }
    
    .floating-element {
        animation-duration: 2s;
    }
}
