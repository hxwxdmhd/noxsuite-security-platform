<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}NoxPanel v7.0.0{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        :root {
            --nox-primary: #2c3e50;
            --nox-secondary: #34495e;
            --nox-accent: #3498db;
            --nox-success: #27ae60;
            --nox-warning: #f39c12;
            --nox-danger: #e74c3c;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--nox-primary) !important;
        }

        .sidebar {
            min-height: calc(100vh - 56px);
            background: linear-gradient(135deg, var(--nox-primary), var(--nox-secondary));
            color: white;
            padding: 1rem;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            margin-bottom: 5px;
            transition: all 0.3s ease;
        }

        .sidebar .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .sidebar .nav-link.active {
            color: white;
            background-color: var(--nox-accent);
        }

        .main-content {
            padding: 1.5rem;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            transition: box-shadow 0.15s ease-in-out;
        }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }

        .status-online { background-color: var(--nox-success); }
        .status-warning { background-color: var(--nox-warning); }
        .status-offline { background-color: var(--nox-danger); }

        .footer {
            background-color: var(--nox-primary);
            color: white;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        .alert {
            border: none;
            border-radius: 10px;
        }

        .btn-nox-primary {
            background-color: var(--nox-primary);
            border-color: var(--nox-primary);
            color: white;
        }

        .btn-nox-primary:hover {
            background-color: var(--nox-secondary);
            border-color: var(--nox-secondary);
            color: white;
        }

        .knowledge-card {
            border-left: 4px solid var(--nox-accent);
        }

        .code-block {
            background-color: #2d3748;
            color: #e2e8f0;
            border-radius: 8px;
            padding: 1rem;
            font-family: 'Courier New', monospace;
            overflow-x: auto;
        }

        .timeline-item {
            border-left: 2px solid var(--nox-accent);
            padding-left: 1rem;
            position: relative;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -6px;
            top: 0;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: var(--nox-accent);
        }

        .search-highlight {
            background-color: #fff3cd;
            padding: 2px 4px;
            border-radius: 3px;
        }

        .rating-stars {
            color: #ffc107;
        }

        .usage-badge {
            background-color: #6c757d;
            color: white;
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 1rem;
        }

        @media (max-width: 768px) {
            .sidebar {
                min-height: auto;
            }
            
            .main-content {
                padding: 1rem;
            }
        }
    </style>
    
    {% block extra_head %}{% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('index') if url_for('index') else '/' }}">
                <i class="fas fa-shield-alt"></i> NoxPanel v7.0.0
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/knowledge/">
                            <i class="fas fa-brain"></i> Knowledge Base
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/health">
                            <i class="fas fa-heartbeat"></i> Health
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/knowledge/import"><i class="fas fa-upload"></i> Import Data</a></li>
                            <li><a class="dropdown-item" href="/knowledge/export"><i class="fas fa-download"></i> Export Data</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/api/stats"><i class="fas fa-chart-bar"></i> Statistics</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 p-0">
                <div class="sidebar">
                    <h6 class="text-center mb-3">
                        <i class="fas fa-cogs"></i> Control Panel
                    </h6>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                        
                        <h6 class="mt-3 mb-2 text-light">
                            <i class="fas fa-brain"></i> Knowledge Base
                        </h6>
                        <a class="nav-link" href="/knowledge/">
                            <i class="fas fa-search"></i> Search & Browse
                        </a>
                        <a class="nav-link" href="/knowledge/code-snippets">
                            <i class="fas fa-code"></i> Code Snippets
                        </a>
                        <a class="nav-link" href="/knowledge/conversations">
                            <i class="fas fa-comments"></i> Conversations
                        </a>
                        <a class="nav-link" href="/knowledge/timeline">
                            <i class="fas fa-clock"></i> Timeline
                        </a>
                        <a class="nav-link" href="/knowledge/add">
                            <i class="fas fa-plus"></i> Add Item
                        </a>
                        
                        <h6 class="mt-3 mb-2 text-light">
                            <i class="fas fa-tools"></i> Tools
                        </h6>
                        <a class="nav-link" href="/knowledge/import">
                            <i class="fas fa-upload"></i> Import Data
                        </a>
                        <a class="nav-link" href="/api/health">
                            <i class="fas fa-heartbeat"></i> System Health
                        </a>
                        <a class="nav-link" href="/api/stats">
                            <i class="fas fa-chart-bar"></i> Statistics
                        </a>
                        
                        <h6 class="mt-3 mb-2 text-light">
                            <i class="fas fa-filter"></i> Quick Filters
                        </h6>
                        <a class="nav-link" href="/knowledge/search?type=documentation">
                            <i class="fas fa-book"></i> Documentation
                        </a>
                        <a class="nav-link" href="/knowledge/search?type=best_practice">
                            <i class="fas fa-award"></i> Best Practices
                        </a>
                        <a class="nav-link" href="/knowledge/search?type=script">
                            <i class="fas fa-file-code"></i> Scripts
                        </a>
                    </nav>
                    
                    <!-- System Status -->
                    <div class="mt-4 p-3 bg-dark rounded">
                        <h6 class="mb-2">System Status</h6>
                        <div class="small">
                            <div><span class="status-indicator status-online"></span> NoxPanel v7.0.0</div>
                            <div><span class="status-indicator status-online"></span> Knowledge Base</div>
                            <div><span class="status-indicator status-online"></span> Security Systems</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="main-content">
                    <!-- Flash Messages -->
                    {% with messages = get_flashed_messages(with_categories=true) %}
                        {% if messages %}
                            {% for category, message in messages %}
                                <div class="alert alert-{{ 'danger' if category == 'error' else category }} alert-dismissible fade show" role="alert">
                                    {% if category == 'success' %}
                                        <i class="fas fa-check-circle"></i>
                                    {% elif category == 'error' %}
                                        <i class="fas fa-exclamation-triangle"></i>
                                    {% elif category == 'warning' %}
                                        <i class="fas fa-exclamation-circle"></i>
                                    {% else %}
                                        <i class="fas fa-info-circle"></i>
                                    {% endif %}
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endwith %}
                    
                    <!-- Page Content -->
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">
                        <i class="fas fa-shield-alt"></i> NoxPanel v7.0.0 - Project Heimnetz
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0">
                        <i class="fas fa-brain"></i> Knowledge Management System Active
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                if (!alert.classList.contains('alert-danger')) {
                    setTimeout(() => {
                        const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                        bsAlert.close();
                    }, 5000);
                }
            });
            
            // Update sidebar active state
            updateActiveNavigation();
        });
        
        function updateActiveNavigation() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.sidebar .nav-link');
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        }
        
        // Global search functionality
        function performGlobalSearch(query) {
            if (query.trim().length > 0) {
                window.location.href = `/knowledge/search?q=${encodeURIComponent(query)}`;
            }
        }
        
        // Add search on Enter key
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'k') {
                e.preventDefault();
                const query = prompt('Search Knowledge Base:');
                if (query) {
                    performGlobalSearch(query);
                }
            }
        });
    </script>
    
    {% block extra_scripts %}{% endblock %}
</body>
</html>
