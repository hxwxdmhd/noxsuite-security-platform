        </div>
        
        <!-- Active Scans -->
        <div class="security-card mb-4">
            <h5><i class="fas fa-spinner fa-spin"></i> Active Security Scans</h5>
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
