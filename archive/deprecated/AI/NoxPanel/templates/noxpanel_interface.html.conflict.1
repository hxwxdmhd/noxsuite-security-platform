<!DOCTYPE html>
<html lang="en" data-theme="purple">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ¤– NoxPanel AI Control v7.0</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/enhanced-themes.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/ultimate-dashboard.css') }}">
    
    <style>
        .ai-control-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
            background: var(--bg-primary);
        }
        
        .ai-header {
            background: linear-gradient(135deg, #8b5cf6, #3b82f6);
            border-radius: 16px;
            padding: 2rem;
            color: white;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .model-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .model-card {
            background: var(--bg-card);
            border: 2px solid var(--border-primary);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .model-card:hover {
            border-color: var(--accent-primary);
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }
        
        .model-status {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        
        .status-online {
            background: #10b981;
            color: white;
        }
        
        .chat-interface {
            background: var(--bg-card);
            border: 2px solid var(--border-primary);
            border-radius: 16px;
            padding: 2rem;
            margin-top: 2rem;
        }
        
        .chat-messages {
            height: 400px;
            overflow-y: auto;
            border: 1px solid var(--border-primary);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            background: var(--bg-secondary);
        }
        
        .message {
            margin-bottom: 1rem;
            padding: 0.75rem;
            border-radius: 8px;
        }
        
        .message.user {
            background: var(--accent-primary);
            color: white;
            margin-left: 2rem;
        }
        
        .message.ai {
            background: var(--bg-tertiary);
            color: var(--text-primary);
            margin-right: 2rem;
        }
    </style>
</head>
<body>
    <div class="ai-control-container">
        <!-- Header -->
        <header class="ai-header">
            <h1><i class="fas fa-brain"></i> NoxPanel AI Control Center</h1>
            <p>Advanced AI Model Management with 9 Integrated Ollama Models</p>
            <a href="/" class="btn btn-light mt-2">
                <i class="fas fa-arrow-left"></i> Back to Suite
            </a>
        </header>
        
        <!-- AI Models Grid -->
        <div class="model-grid">
            <div class="model-card">
                <h3><i class="fas fa-robot"></i> Mixtral 8x7B</h3>
                <p>High-performance mixture of experts model for complex reasoning</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
            
            <div class="model-card">
                <h3><i class="fas fa-robot"></i> Llama3 Latest</h3>
                <p>Advanced language model for general AI tasks</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
            
            <div class="model-card">
                <h3><i class="fas fa-robot"></i> Phi3 Mini</h3>
                <p>Compact model for lightweight AI operations</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
            
            <div class="model-card">
                <h3><i class="fas fa-code"></i> DeepSeek Coder</h3>
                <p>Specialized model for code generation and analysis</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
            
            <div class="model-card">
                <h3><i class="fas fa-code"></i> CodeLlama 13B</h3>
                <p>Large code-focused model for complex programming tasks</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
            
            <div class="model-card">
                <h3><i class="fas fa-robot"></i> Mistral 7B</h3>
                <p>Efficient instruction-following model</p>
                <span class="model-status status-online">ONLINE</span>
                <button class="btn btn-primary mt-2 w-100">Select Model</button>
            </div>
        </div>
        
        <!-- Chat Interface -->
        <div class="chat-interface">
            <h3><i class="fas fa-comments"></i> AI Chat Interface</h3>
            <div class="chat-messages" id="chatMessages">
                <div class="message ai">
                    <strong>ðŸ¤– NoxPanel AI:</strong> Hello! I'm ready to help you with AI tasks, code generation, analysis, and more. Which model would you like to use?
                </div>
            </div>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Type your message..." id="chatInput">
                <button class="btn btn-primary" onclick="sendMessage()">
                    <i class="fas fa-paper-plane"></i> Send
                </button>
                <button class="btn btn-secondary" onclick="startVoiceInput()">
                    <i class="fas fa-microphone"></i> Voice
                </button>
            </div>
        </div>
    </div>
    
    <script>
        let currentModel = 'mixtral:8x7b';
        
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');
            
            if (input.value.trim()) {
                // Add user message
                const userMsg = document.createElement('div');
                userMsg.className = 'message user';
                userMsg.innerHTML = `<strong>ðŸ‘¤ You:</strong> ${input.value}`;
                messages.appendChild(userMsg);
                
                // Simulate AI response
                setTimeout(() => {
                    const aiMsg = document.createElement('div');
                    aiMsg.className = 'message ai';
                    aiMsg.innerHTML = `<strong>ðŸ¤– ${currentModel}:</strong> I understand your request. This is a demo response from the ${currentModel} model.`;
                    messages.appendChild(aiMsg);
                    messages.scrollTop = messages.scrollHeight;
                }, 1000);
                
                input.value = '';
                messages.scrollTop = messages.scrollHeight;
            }
        }
        
        function startVoiceInput() {
            alert('ðŸŽ¤ Voice interface will be implemented in the full version!');
        }
        
        // Handle Enter key in chat input
        document.getElementById('chatInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // Model selection
        document.querySelectorAll('.model-card button').forEach(button => {
            button.addEventListener('click', function() {
                const modelName = this.parentElement.querySelector('h3').textContent;
                currentModel = modelName;
                
                // Update UI
                document.querySelectorAll('.model-card').forEach(card => {
                    card.style.borderColor = 'var(--border-primary)';
                });
                this.parentElement.style.borderColor = 'var(--accent-primary)';
                
                // Add message about model selection
                const messages = document.getElementById('chatMessages');
                const modelMsg = document.createElement('div');
                modelMsg.className = 'message ai';
                modelMsg.innerHTML = `<strong>ðŸ¤– System:</strong> Switched to ${modelName} model. Ready for your questions!`;
                messages.appendChild(modelMsg);
                messages.scrollTop = messages.scrollHeight;
            });
        });
    </script>
</body>
</html>
