    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 3px solid #4CAF50;
        }
        
        .header h1 {
            color: #2c3e50;
            margin: 0;
            font-size: 2.5em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        
        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        
        .status-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            border-left: 5px solid #4CAF50;
            transition: transform 0.3s ease;
        }
        
        .status-card:hover {
            transform: translateY(-5px);
        }
        
        .status-card.ready {
            border-left-color: #4CAF50;
            background: linear-gradient(135deg, #f8fff8 0%, #e8f5e8 100%);
        }
        
        .status-card.warning {
            border-left-color: #FF9800;
            background: linear-gradient(135deg, #fffaf0 0%, #fff3cd 100%);
        }
        
        .status-card.error {
            border-left-color: #f44336;
            background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%);
        }
        
        .status-card h3 {
            margin-top: 0;
            color: #2c3e50;
            font-size: 1.4em;
            display: flex;
            align-items: center;
        }
        
        .status-card .icon {
            font-size: 1.5em;
            margin-right: 10px;
        }
        
        .status-list {
            list-style: none;
            padding: 0;
            margin: 15px 0;
        }
        
        .status-list li {
            padding: 8px 0;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .status-list li:last-child {
            border-bottom: none;
        }
        
        .status-indicator {
            font-weight: bold;
            padding: 4px 8px;
            border-radius: 20px;
            font-size: 0.8em;
        }
        
        .ready-indicator {
            background: #4CAF50;
            color: white;
        }
        
        .warning-indicator {
            background: #FF9800;
            color: white;
        }
        
        .error-indicator {
            background: #f44336;
            color: white;
        }
        
        .launch-commands {
            background: #2c3e50;
            color: white;
            padding: 25px;
            border-radius: 10px;
            margin-top: 30px;
        }
        
        .launch-commands h3 {
            color: #4CAF50;
            margin-top: 0;
        }
        
        .command-list {
            list-style: none;
            padding: 0;
        }
        
        .command-list li {
            background: rgba(255,255,255,0.1);
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
        }
        
        .command-title {
            color: #4CAF50;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .command-code {
            background: rgba(0,0,0,0.3);
            padding: 8px 12px;
            border-radius: 5px;
            margin: 5px 0;
            font-size: 0.9em;
            word-break: break-all;
        }
        
        .overall-status {
            text-align: center;
            padding: 30px;
            margin: 30px 0;
            border-radius: 15px;
            font-size: 1.5em;
            font-weight: bold;
        }
        
        .overall-status.ready {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
        }
        
        .overall-status.warning {
            background: linear-gradient(135deg, #FF9800, #e68900);
            color: white;
        }
        
        .overall-status.error {
            background: linear-gradient(135deg, #f44336, #da190b);
            color: white;
        }
        
        .recommendations {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
        }
        
        .recommendations h3 {
            color: #495057;
            margin-top: 0;
        }
        
        .recommendations ul {
            margin: 0;
        }
        
        .recommendations li {
            margin: 10px 0;
            padding: 8px;
            background: white;
            border-radius: 5px;
            border-left: 4px solid #17a2b8;
        }
        
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #e9ecef;
            color: #6c757d;
        }
    </style>
</head>
