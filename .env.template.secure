# NoxSuite Security Platform Environment Configuration
# Copy this file to .env and update with your secure values

# Database Configuration
DATABASE_URL=mysql+pymysql://noxsuite_user:CHANGE_THIS_PASSWORD@localhost:3306/noxsuite_prod
DATABASE_TEST_URL=mysql+pymysql://noxsuite_test:TEST_PASSWORD@localhost:3306/noxsuite_test

# Security Settings - CRITICAL: Change these values!
JWT_SECRET=GENERATE_STRONG_RANDOM_JWT_SECRET_HERE_64_CHARS_MINIMUM
MFA_SECRET=GENERATE_STRONG_RANDOM_MFA_SECRET_HERE_32_CHARS
JWT_SECRET_KEY=GENERATE_STRONG_RANDOM_KEY_HERE
MFA_ISSUER=NoxSuite
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536

# Default Passwords (Change these!)
NOXSUITE_DEFAULT_PASSWORD=CHANGE_THIS_DEFAULT_PASSWORD
NOXSUITE_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
NOXSUITE_USER_PASSWORD=CHANGE_THIS_USER_PASSWORD

# API Keys (Replace with your keys)
API_KEY=your-secure-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
LANGFLOW_API_KEY=your-langflow-api-key-here

# TestSprite Integration
TESTSPRITE_API_KEY=your-testsprite-api-key
TESTSPRITE_PROJECT_ID=your-project-id

# Production Settings
DEBUG=False
FLASK_DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO
